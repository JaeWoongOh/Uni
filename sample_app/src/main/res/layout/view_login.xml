<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sc_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_F1F1F1"
    android:fillViewport="true"
    android:gravity="center"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:overScrollMode="never" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 로고 영역 -->

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="132dp"
                android:background="@drawable/img_logo_dm"/>
        </LinearLayout>

        <!-- 아이디, 패스워드 입력 영역 -->

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editId"
                    android:layout_width="298dp"
                    android:layout_height="44.5dp"
                    android:background="@drawable/textfield_1line_normal"
                    android:hint="ID"
                    android:inputType="textUri"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/_A3A3A3"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editPass"
                    android:layout_width="298dp"
                    android:layout_height="44.5dp"
                    android:layout_marginTop="-2dp"
                    android:background="@drawable/textfield_1line_normal"
                    android:hint="Password"
                    android:inputType="textUri"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/_A3A3A3"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="15dp" />
                    
            </LinearLayout>

            <!-- 체크박스 영역 -->

            <LinearLayout
                android:layout_width="298dp"
                android:layout_height="17dp"
                android:layout_marginTop="6dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_common_check_on_pressed" >
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.5dp"
                    android:text="@string/auto_login"
                    android:textColor="@color/_7F7F7F"
                    android:textSize="13dp" />
            </LinearLayout>

            <!-- 버튼 영역 -->

            <LinearLayout
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@drawable/btn_common_red"
                    android:text="@string/login"
                    android:textColor="@color/_FFFFFF"
                    android:textSize="18dp" />

                <LinearLayout
                    android:id="@+id/findIdPwBtn"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_common_black"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/find_id_pw"
                        android:textColor="@color/_FFFFFF"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0.5dp"
                        android:text="@string/call_center"
                        android:textColor="@color/_FEFEFE"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

